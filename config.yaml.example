# Bitcoin Tax Configuration
# Copy this file to config.yaml and fill in your values
# Sensitive information and settings

# Data file paths
data_files:
  buy_csv: "data/buys.csv"
  mining_csv: "data/mining.csv"
  sell_csv: "data/sells.csv"
  compass_payments_csv: "data/hosting_payments.csv"

# Current BTC balance (as of analysis date)
current_balance_btc: 1.0

# Legacy BTC settings
legacy:
  # Date to use for legacy BTC acquisition (if any)
  # If empty string (""), cost basis will be $0 and default date (2009-01-03) will be used
  # If a date is provided (e.g., "2019-01-01"), that date will be used but cost basis is still $0
  acquisition_date: "2019-01-01"

# Cost basis method selection
# Options: "FIFO", "LIFO", "HIFO", or "OPTIMAL" (chooses lowest gain)
# Note: Once you select a method, you must use it consistently for future tax years
cost_basis_method: "OPTIMAL"

# Target tax year for reporting (optional)
# If set, only sales from this year will be included in tax reports
# If not set or null, all historical sales will be included
# Example: 2024
# target_year: null

